---
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader } from '@/components/ui/card';

interface Props {
  groupName: string;
  stickerCount?: number;
}

const { groupName, stickerCount = 5 } = Astro.props;
---

<Card class="w-full hover:shadow-lg transition-shadow duration-300">
  <CardHeader class="pb-4">
    <div class="flex items-center justify-between">
      <h3 class="text-xl font-semibold text-foreground">{groupName}</h3>
      <div class="flex gap-2">
        <Button variant="outline" size="sm" class="text-xs">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Download
        </Button>
      </div>
    </div>
  </CardHeader>
  
  <CardContent class="space-y-6">
    <!-- Sticker Preview -->
    <div class="flex gap-3 flex-wrap py-2">
      {Array.from({ length: stickerCount }).map((_, i) => (
        <div class="w-20 h-20 bg-gradient-to-br from-blue-100 to-purple-100 rounded-xl flex items-center justify-center hover:scale-110 transition-transform duration-200 shadow-md flex-shrink-0">
          <img src="/dummy-sticker.webp" alt={`Sticker ${i + 1}`} class="w-14 h-14 rounded-lg" />
        </div>
      ))}
    </div>
    
    <!-- Action Buttons -->
    <div class="flex gap-3 pt-2">
      <a href="/create">
        <Button class="flex-1 w-full">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Edit Group
        </Button>
      </a>
      <a href="/create#see-it-in-action">
        <Button variant="outline" class="flex-1 w-full">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          See in Action
        </Button>
      </a>
    </div>
  </CardContent>
</Card>
